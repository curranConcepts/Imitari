<%- include('partials/header') -%>

  <div class="container">
    <div class="col-sm-12">
      <h2>Feed</h2>
      <ul class="row list-unstyled" data-masonry='{"percentPosition": true }'>
        <% for(var i=0; i<posts.length; i++) {%>
          <li class="col-sm-12 col-md-6 justify-content-between mt-4">
            <div class="card">
              <div class="card-body">
                <div class="media">
                    <h2 class="text-center align-self-end"><strong><%= posts[i].title %></strong></h2>
                    <a class="d-flex align-items-stretch" href="/post/<%= posts[i]._id%>">
                      <img class="w-100 shadow-1-strong rounded img-fluid" src="<%= posts[i].image%>">
                    </a>
                    <div class="row col-12 justify-content-between">
                      <p class="col-3"><%= posts[i].likes %> â™¡</p>
                      <p class="col-6 text-end"><%= posts[i].userName %></p>
                    </div>   
                </div>
              </div>
            </div>
          </li>
        <% } %>
        </ul>
    </div>
  </div>  

<%- include('partials/footer') -%>