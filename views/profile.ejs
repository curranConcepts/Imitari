<%- include('partials/header') -%>
<div class="container">
  <div class="row py-5">
    <div class="col-sm-12 col-md-4 p-2">
      <div class="accordion" id="uploadAccordian">
        <div class="accordion-item">
          <h2 class="accordion-header">
            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#upload" aria-expanded="true" aria-controls="upload">
              Make a post
            </button>
          </h2>
          <div id="upload" class="accordion-collapse collapse hide">
            <div class="accordion-body">
              <form action="/post/createPost" enctype="multipart/form-data" method="POST">
                <div class="mb-3">
                  <label for="title" class="form-label">Title</label>
                  <input type="text" class="form-control" id="title" name="title">
                </div>
                <div class="mb-3">
                  <label for="caption" class="form-label">Caption</label>
                  <textarea class="form-control" id="caption" name="caption"></textarea>
                </div>
                <div class="mb-3">
                  <label for="imgUpload" class="form-label">Image</label>
                  <input type="file" class="form-control" id="imageUpload" name="file">
                </div>
                <button type="submit" class="btn btn-primary" value="Upload">Submit</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    <hr />
    </div>
    <div class="col-sm-12 col-md-8">
      <h2>My Posts</h2>
      <ul class="row list-unstyled" data-masonry='{"percentPosition": true }'>
        <% for(var i=0; i<posts.length; i++) {%>
        <li class="col-sm-12 col-md-6 justify-content-between mt-5">
          <div class="card">
            <div class="card-body">
              <div class="media">
                <h2 class="text-center align-self-end"><strong><%= posts[i].title %></strong></h2>
                <a href="/post/<%= posts[i]._id%>">
                  <img class="img-fluid" src="<%= posts[i].image%>">
                </a>
                <p><%= posts[i].likes %> â™¡</p>
              </div>
            </div>
          </div>
        </li>
        <% } %>
      </ul> 
    </div>  
  </div>
</div>
<%- include('partials/footer') -%>